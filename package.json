{
    "name": "cucumber-steps-parser",
    "version": "2.1.0",
    "description": "A parser to get the cucumber sentences from step definition files",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/L3bowski/cucumber-steps-parser.git"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "cucumber-steps-parser": "./bin/cucumber-steps-parser"
    },
    "files": [
        "bin",
        "dist"
    ],
    "scripts": {
        "build": "rm -rf dist && tsc -d",
        "lint": "tslint -e 'node_modules/**' -p .",
        "prettify": "prettier --write src/**/*.ts",
        "prepublishOnly": "npm run build",
        "start": "node ./bin/cucumber-steps-parser",
        "test": "cucumber-js --require-module ts-node/register --require src/**/__step-definitions__/*.step.ts features/**/*.feature"
    },
    "keywords": [
        "Cucumber",
        "gherkin",
        "parser"
    ],
    "author": "Carles Capellas <capellas.carles@gmail.com>",
    "license": "ISC",
    "dependencies": {
        "typescript": "^3.5.2",
        "yargs": "^14.0.0"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/cucumber": "^4.0.5",
        "@types/node": "^11.12.1",
        "@types/yargs": "^13.0.2",
        "awesome-typescript-loader": "^5.2.1",
        "chai": "^4.2.0",
        "cucumber": "^5.1.0",
        "prettier": "^1.16.4",
        "ts-node": "^8.3.0",
        "tslint": "^5.17.0",
        "tslint-config-prettier": "^1.18.0"
    }
}
